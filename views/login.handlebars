<script src="/public/js/login.js"></script>
<h1>Login</h1>
<br>
<form id="login-form" action="/login" method="POST">
  <div id="loginEmailGroup" class="mb-3">
    <label class="form-label" for="username">Email: </label>
    <input class="form-control" type="text" id="username" name="username" required />
  </div>
  <div id="loginPasswordGroup" class="mb-3">
    <label class="form-label" for="password">Password: </label>
    <input class="form-control" type="password" id="password" name="password" required />
  </div>
  <button id="loginFormSubmit" type="submit" class="btn btn-primary">Submit</button>
</form>

<button class="btn btn-success" onclick="location.href='/'">Register</button>
<br>
<br>
<div class="mb-3"> 
  <p class="error-text">{{error}}</p>
</div>
