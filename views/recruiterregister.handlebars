<h1>Recruiters' Registration</h1>

<form action="/registerRecruiters" method="POST">
  <label for="firstNameInput">First Name:</label>
  <input type="text" id="firstNameInput" name="firstNameInput" required />

  <label for="lastNameInput">Last Name:</label>
  <input type="text" id="lastNameInput" name="lastNameInput" required />

  <label for="emailAddressInput">Email:</label>
  <input type="email" id="emailAddressInput" name="emailAddressInput" required />

  <label for="companyInput">Company:</label>
  <input type="text" id="companyInput" name="companyInput" required />

  <br>
  <label for="passwordInput">Password:</label>
  <input type="password" name="passwordInput" value="" id="passwordInput"> 
  <br>
  <label for="passwordInput">Confirm Password:</label>
  <input type="password" name="confirmPasswordInput" value="" id="confirmPasswordInput"> 

  <input type="submit" value="Register" /> 

  <br>
    <a href="/login">Already have an account? Click here to login</a>
  {{!<button onclick="location.href='/login'">Login</button>}}
</form>