<h1>Job Seeker Registration</h1>

<form action="/registerStudents" method="POST" enctype="multipart/form-data">
  <label class="form-label" for="firstNameInput">First Name:</label>
  <input
    class="form-control"
    type="text"
    id="firstNameInput"
    name="firstNameInput"
    required
  />

  <label class="form-label" for="lastNameInput">Last Name:</label>
  <input
    class="form-control"
    type="text"
    id="lastNameInput"
    name="lastNameInput"
    required
  />

  <br />
  <label class="form-label" for="emailAddressInput">Email:</label>
  <input
    class="form-control"
    type="email"
    id="emailAddressInput"
    name="emailAddressInput"
    required
  />
  <br />

  <label class="form-label" for="birthDateInput">Birth Date (mm-dd-yyyy):</label>
  <input
    class="form-control"
    type="date"
    id="birthDateInput"
    name="birthDateInput"
    max="{{todayDate}}"
    required
  />
  <br />

  {{! <label for="stateInput">State:</label>
  <input type="text" id="stateInput" name="stateInput" required />
  <br /> }}

  <label class="form-label" for="gradYearInput">Graduation Year:</label>
  <input
    class="form-control"
    type="number"
    id="gradYearInput"
    name="gradYearInput"
    required
  />
  <br />
  <label class="form-label" for="passwordInput">Password:</label>
  <input
    class="form-control"
    type="password"
    name="passwordInput"
    value=""
    id="passwordInput"
  />
  <br />
  <label class="form-label" for="passwordInput">Confirm Password:</label>
  <input
    class="form-control"
    type="password"
    name="confirmPasswordInput"
    value=""
    id="confirmPasswordInput"
  />

  <div class="mb-3">
    <label class="form-label" for="resume">Upload Resume:</label>
    <input
      class="form-control"
      type="file"
      id="resume"
      name="resume"
      accept=".pdf"
      value="upload"
      required
    />
  </div>

  <button
    class="btn btn-success"
    type="submit"
    value="Register"
  >Register</button>

  <br />
  <a href="/login">Already have an account? Click here to login</a>
</form>