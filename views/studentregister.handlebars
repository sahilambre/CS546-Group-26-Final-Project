<h1>Job Seeker Registration</h1>

<form action="/registerStudents" method="POST">
  <label class="form-label" for="firstNameInput">First Name:</label>
  <input class="form-control" type="text" id="firstNameInput" name="firstNameInput" required />

  <label class="form-label" for="lastNameInput">Last Name:</label>
  <input class="form-control" type="text" id="lastNameInput" name="lastNameInput" required />

  <br />
  <label for="emailAddressInput">Email:</label>
  <input
    type="email"
    id="emailAddressInput"
    name="emailAddressInput"
    required
  />

  <label class="form-label" for="ageInput">Age:</label>
  <input class="form-control" type="number" id="ageInput" name="ageInput" required />

  <label class="form-label" for="stateInput">State:</label>
  <input class="form-control" type="text" id="stateInput" name="stateInput" required />

  <label class="form-label" for="gradYearInput">Graduation Year:</label>
  <input class="form-control" type="number" id="gradYearInput" name="gradYearInput" required />

  <br />
  <label for="passwordInput">Password:</label>
  <input type="password" name="passwordInput" value="" id="passwordInput" />
  <br />
  <label for="passwordInput">Confirm Password:</label>
  <input
    type="password"
    name="confirmPasswordInput"
    value=""
    id="confirmPasswordInput"
  />

  <div class="mb-3">
    <label class="form-label" for="resume">Resume:</label>
    <input
      class="form-control"
      type="file"
      id="resume"
      name="resume"
      accept=".pdf"
    />
  </div>

  <input type="submit" value="Register" />

  <br />
  <a href="/login">Already have an account? Click here to login</a>
</form>