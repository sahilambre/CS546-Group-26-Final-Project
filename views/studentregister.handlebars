<script src="/public/js/userRegister.js"></script>
<h1>Job Seeker Registration</h1>

<form id="user-registration-form" action="/registerStudents" method="POST" enctype="multipart/form-data">
  <div id="srFirstNamegroup" class="mb-3">
    <label class="form-label" for="firstNameInput">First Name:</label>
    <input
      class="form-control"
      type="text"
      id="firstNameInput"
      name="firstNameInput"
      required
    ></div>

  <div id="srLastNameGroup" class="mb-3">
    <label class="form-label" for="lastNameInput">Last Name:</label>
    <input
      class="form-control"
      type="text"
      id="lastNameInput"
      name="lastNameInput"
      required
    >

  </div>

  <div id="srEmailGroup" class="mb-3">
    <label class="form-label" for="emailAddressInput">Email:</label>
    <input
      class="form-control"
      type="email"
      id="emailAddressInput"
      name="emailAddressInput"
      required
    >
  </div>
  <div class="mb-3" id="srBirthDateGroup">
    <label class="form-label" for="birthDateInput">Birth Date (mm-dd-yyyy):</label>
    <input
      class="form-control"
      type="date"
      id="birthDateInput"
      name="birthDateInput"
      max="{{todayDate}}"
      required
    >

  </div>

  {{! <label for="stateInput">State:</label>
  <input type="text" id="stateInput" name="stateInput" required >
  <br > }}
  <div class="mb-3" id="srGraduationYearGroup">
    <label class="form-label" for="gradYearInput">Graduation Year:</label>
    <input
      class="form-control"
      type="number"
      id="gradYearInput"
      name="gradYearInput"
      required
    >
  </div>

  <div class="mb-3" id="srPasswordGroup">
    <label class="form-label" for="passwordInput">Password:</label>
    <input
      class="form-control"
      type="password"
      name="passwordInput"
      id="passwordInput"
    >
  </div>

  <div class="mb-3" id="srConfirmPasswordGroup">
    <label class="form-label" for="confirmPasswordInput">Confirm Password:</label>
    <input
      class="form-control"
      type="password"
      name="confirmPasswordInput"
      id="confirmPasswordInput"
    >
  </div>

  <div class="mb-3" id="srUploadResumeGroup">
    <label class="form-label" for="resumeInput">Upload Resume:</label>
    <input
      class="form-control"
      type="file"
      id="resumeInput"
      name="resumeInput"
      accept=".pdf"
      value="upload"
      required
    >
  </div>

  {{!-- <input type="hidden" id="base64"> --}}

  <button class="btn btn-primary form-control" type="submit">Register</button>

  {{! <button class="btn btn-success" type="submit">Register</button> }}

  <div class="mb-3">
    <p class="error-text">{{error}}</p>
  </div>

</form>
